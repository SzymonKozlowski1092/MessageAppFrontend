<UserControl x:Class="MessageAppFrontend.View.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MessageAppFrontend.View"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="400">
    
    <Border CornerRadius="10" 
            Background="White" 
            Padding="30" 
            Margin="40" 
            VerticalAlignment="Center" 
            Effect="{DynamicResource DropShadowEffect}">
        
        <StackPanel>
            <TextBlock Text="Message App" 
                   HorizontalAlignment="Center"
                   FontSize="28" 
                   FontWeight="Bold"
                   Margin="0,0,0,30"
                   Foreground="#333"/>

            <TextBlock Text="Nazwa użytkownika" Margin="0,0,0,5" Foreground="#555"/>
            <TextBox Height="30" Margin="0,0,0,15" Padding="5" BorderBrush="#ccc"/>

            <TextBlock Text="Hasło" Margin="0,0,0,5" Foreground="#555"/>
            <PasswordBox Height="30" Margin="0,0,0,20" Padding="5" BorderBrush="#ccc"/>

            <Button Content="Zaloguj" 
                Width="150" Height="35"
                HorizontalAlignment="Center"
                Cursor="Hand"
                FontWeight="SemiBold"
                Background="#4CAF50" 
                Foreground="White"
                BorderThickness="0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                            CornerRadius="5" 
                            Padding="10"
                            SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <StackPanel Margin="0,20,0,0" HorizontalAlignment="Center">
                <Button Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand">
                    <TextBlock Text="Zarejestruj się" 
                           Foreground="#007ACC"
                           TextDecorations="Underline"/>
                </Button>

                <Button Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand">
                    <TextBlock Text="Ustaw nowe hasło" 
                           Foreground="#007ACC"
                           TextDecorations="Underline"/>
                </Button>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
