<UserControl x:Class="MessageAppFrontend.View.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MessageAppFrontend.View" xmlns:controls="clr-namespace:MessageAppFrontend.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FF2C2F33">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!-- Lista wiadomości -->
            <RowDefinition Height="Auto"/>
            <!-- Pole do wpisania wiadomości -->
        </Grid.RowDefinitions>

        <!-- Lista wiadomości -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10">
            <ItemsControl ItemsSource="{Binding Messages}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <controls:MessageControl/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Wysyłanie wiadomości -->
        <Border Grid.Row="1" Background="#FF40444B" CornerRadius="10" Padding="8">
            <DockPanel LastChildFill="True">
                <Border Background="#FF2C2F33" CornerRadius="10" Margin="0,0,10,0" Height="60" VerticalAlignment="Center">
                    <TextBox x:Name="MessageInput"
                             Text="{Binding NewMessageText, UpdateSourceTrigger=PropertyChanged}"
                             Background="Transparent"
                             Foreground="#FFB0BEC5"
                             BorderThickness="0"
                             VerticalContentAlignment="Center"
                             Padding="10,0"
                             FontSize="14"
                             MinWidth="100" Width="612"/>
                </Border>
                <Button Content="Wyślij"
                        Command="{Binding SendMessageCommand}"
                        Background="#FF7289DA"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Height="60"
                        Width="80"
                        VerticalAlignment="Center"
                        Cursor="Hand"/>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
